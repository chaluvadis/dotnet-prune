{
  "name": "dotnet-prune-vscode",
  "displayName": "DotNetPrune",
  "description": "Show DotNetPrune analysis results in VS Code Problems panel and Activity Bar by reading or running the JSON report.",
  "version": "0.0.1",
  "publisher": "nomad-in-code",
  "icon": "./resources/icon.png",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/chaluvadis/dotnet-prune"
  },
  "homepage": "https://github.com/chaluvadis/dotnet-prune",
  "bugs": {
    "url": "https://github.com/chaluvadis/dotnet-prune/issues"
  },
  "engines": {
    "vscode": "^1.105.0"
  },
  "categories": [
    "Linters"
  ],
  "activationEvents": [
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "dotnetprune.refresh",
        "title": "DotNetPrune: Refresh Findings"
      },
      {
        "command": "dotnetprune.runAnalysis",
        "title": "DotNetPrune: Run Analysis (external tool)"
      },
      {
        "command": "dotnetprune.openReport",
        "title": "DotNetPrune: Open Report File"
      },
      {
        "command": "dotnetprune.clearFindings",
        "title": "DotNetPrune: Clear Findings"
      },
      {
        "command": "dotnetprune.openFinding",
        "title": "DotNetPrune: Open Finding"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "DotNetPrune",
      "properties": {
        "dotNetPrune.reportPath": {
          "type": "string",
          "default": "",
          "description": "Path to the DotNetPrune JSON report. Can be absolute or workspace-relative. If empty, extension will search for dotnetprune-report.json in the workspace root."
        },
        "dotNetPrune.toolCommand": {
          "type": "string",
          "default": "",
          "description": "Optional external command to run DotNetPrune and produce the JSON report. Use ${solution}, ${reportPath}, and ${workspaceRoot} placeholders."
        },
        "dotNetPrune.showOnlyHighConfidence": {
          "type": "boolean",
          "default": false,
          "description": "If true, show only high-confidence findings (requires the report to include a confidence field)."
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "dotnetprune.views",
          "title": "DotNetPrune",
          "icon": "resources/gray.png"
        }
      ]
    },
    "views": {
      "dotnetprune.views": [
        {
          "id": "dotnetprune.views.findings",
          "name": "Findings"
        }
      ]
    }
  },
  "scripts": {
    "compile": "node esbuild.js",
    "dotnet:publish": "dotnet publish ./FindUnused/FindUnused.csproj --output ./dist/FindUnused/",
    "package": "pnpm compile && pnpm dotnet:publish && vsce package"
  },
  "devDependencies": {
    "@types/vscode": "^1.105.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "24.10.0",
    "typescript-eslint": "^8.46.4",
    "eslint": "^9.39.1",
    "esbuild": "^0.27.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}